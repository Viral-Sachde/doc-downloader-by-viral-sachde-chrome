{
    "manifest_version": 3,
    "name": "Doc Dowloader By Viral Sachde",
    "version": "1.0.0",
    "description": "Extract and process document links from any webpage with customizable settings",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Doc Dowloader By Viral Sachde âš¡",
      "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
 "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],

    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png",
      "256": "icons/icon-256.png",
      "512": "icons/icon-512.png"
    }
  }